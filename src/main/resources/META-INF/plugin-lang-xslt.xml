<idea-plugin>
  <extensions defaultExtensionNs="com.intellij">
    <standardResourceProvider implementation="uk.co.reecedunn.intellij.plugin.intellij.javaee.XsltResourceProvider"/>

    <multiHostInjector implementation="uk.co.reecedunn.intellij.plugin.intellij.lang.injection.XPathInXsltLanguageInjection"/>

    <completion.contributor language="XMLPath" implementationClass="uk.co.reecedunn.intellij.plugin.xpath.completion.XPathCompletionContributor"/>
    <typedHandler implementation="uk.co.reecedunn.intellij.plugin.xpath.intellij.codeInsight.editorActions.XPathTypedHandler"/>

    <xml.nsColorProvider implementation="uk.co.reecedunn.intellij.plugin.intellij.editor.XsltNSColorProvider"/>

    <spellchecker.bundledDictionaryProvider implementation="uk.co.reecedunn.intellij.plugin.intellij.spellchecker.XsltBundledDictionaryProvider"/>
  </extensions>
</idea-plugin>
