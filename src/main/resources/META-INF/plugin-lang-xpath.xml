<idea-plugin>
  <extensions defaultExtensionNs="com.intellij">
    <lang.ast.factory language="XMLPath" implementationClass="uk.co.reecedunn.intellij.plugin.xpath.parser.XPathASTFactory"/>
    <lang.parserDefinition language="XMLPath" implementationClass="uk.co.reecedunn.intellij.plugin.xpath.parser.XPathParserDefinition"/>

    <lang.namesValidator language="XMLPath" implementationClass="uk.co.reecedunn.intellij.plugin.intellij.lang.refactoring.XPathNamesValidator"/>

    <lang.findUsagesProvider language="XMLPath" implementationClass="uk.co.reecedunn.intellij.plugin.intellij.lang.findUsages.XPathFindUsagesProvider"/>

    <lang.syntaxHighlighterFactory language="XMLPath" implementationClass="uk.co.reecedunn.intellij.plugin.intellij.lexer.XPathSyntaxHighlighter$Factory"/>
    <colorSettingsPage implementation="uk.co.reecedunn.intellij.plugin.intellij.settings.XPathColorSettingsPage"/>
    <annotator language="XMLPath" implementationClass="uk.co.reecedunn.intellij.plugin.xpath.annotation.QNameAnnotator"/>

    <lang.foldingBuilder language="XMLPath" implementationClass="uk.co.reecedunn.intellij.plugin.core.lang.foldable.FoldingBuilderImpl"/>

    <codeInsight.parameterInfo language="XMLPath" implementationClass="uk.co.reecedunn.intellij.plugin.intellij.lang.XPathParameterInfoHandler" />

    <spellchecker.support language="XMLPath" implementationClass="uk.co.reecedunn.intellij.plugin.intellij.spellchecker.XPathSpellcheckingStrategy"/>
    <spellchecker.bundledDictionaryProvider implementation="uk.co.reecedunn.intellij.plugin.intellij.spellchecker.XPathBundledDictionaryProvider"/>
  </extensions>
</idea-plugin>
